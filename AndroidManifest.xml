<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.merono.g"
    android:versionCode="20"
    android:versionName="3.08" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name" >
        <activity
            android:name=".GActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ThreadActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock" >
            <intent-filter>
                <action android:name="com.merono.g.THREAD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImageWebView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.merono.g.IMAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrefsActivity"
            android:label="Settings"
            android:theme="@style/Theme.Sherlock" >
        </activity>
        <activity
            android:name=".ImageBrowser"
            android:theme="@style/Theme.Sherlock" >
        </activity>
    </application>

</manifest>