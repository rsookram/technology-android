<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="General Settings" >
        <EditTextPreference
            android:defaultValue="/g/"
            android:key="board"
            android:summary="Board to load on startup"
            android:title="Default Board" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Image Viewer Settings" >
        <SwitchPreference
            android:defaultValue="false"
            android:key="zoom_imageviewer"
            android:summary="Display zoom controls on screen"
            android:title="Zoom Controls" />
    </PreferenceCategory>

</PreferenceScreen>